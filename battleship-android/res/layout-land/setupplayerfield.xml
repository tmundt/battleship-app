<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@drawable/background_blue"
                android:layout_gravity="top|center_horizontal" >

    <ImageView
            android:id="@+id/imageSetzeSchiffe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/image_schiffe_setzen"
            android:contentDescription="@string/startscreen"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
    </ImageView>
    <ImageView
            android:id="@+id/imagePlayfield"
            android:layout_width="260dp"
            android:layout_height="252dp"
            android:src="@drawable/image_playfield"
            android:layout_marginLeft="24dp"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/imageSetzeSchiffe"
            android:layout_alignParentLeft="true"/>
    <ImageButton
            android:id="@+id/buttonDrehen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drehen"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/imagePlayfield"
            android:layout_toRightOf="@+id/imagePlayfield"
            android:layout_marginLeft="24dp"/>
    <ImageButton
            android:id="@+id/buttonSpielen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_spielen"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/imagePlayfield"
            android:layout_toRightOf="@+id/buttonDrehen"
            android:layout_marginLeft="24dp"/>
    <ImageButton
            android:id="@+id/buttonShipBiggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_ship_biggest"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/buttonDrehen"/>
    <ImageButton
        android:id="@+id/buttonShipBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_ship_big"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/buttonShipBiggest"
        android:layout_alignLeft="@+id/buttonSpielen"/>
    <ImageButton
            android:id="@+id/buttonShipMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_ship_medium"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/buttonShipBig"
            android:layout_alignRight="@+id/buttonSpielen"
            android:layout_marginRight="33dp"/>
    <ImageButton
            android:id="@+id/buttonShipMedium2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_ship_medium2"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/buttonShipSmall"
            android:layout_alignLeft="@+id/buttonShipMedium"/>
    <ImageButton
            android:id="@+id/buttonShipSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_ship_small"
            android:layout_gravity="center"
            android:layout_below="@+id/buttonShipBig"
            android:layout_alignRight="@+id/buttonShipBig"
            android:layout_marginTop="22dp"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/buttonShipBig"
            android:layout_toLeftOf="@+id/imageSetzeSchiffe"
            android:id="@+id/gridLayout">
    </GridLayout>
    <ImageButton
            android:id="@+id/buttonA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_a1"
            android:layout_marginLeft="14dp"
            android:layout_alignTop="@+id/gridLayout"
            android:layout_alignLeft="@+id/imagePlayfield"
            android:maxHeight="20dp" android:maxWidth="20dp"
            android:minHeight="20dp" android:minWidth="20dp"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="0dp"/>
    <ImageButton
            android:id="@+id/buttonA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_a2"
            android:maxHeight="15dp" android:maxWidth="15dp"
            android:minHeight="15dp" android:minWidth="15dp"
            android:nestedScrollingEnabled="false"
            android:layout_alignTop="@+id/buttonA1" android:layout_toRightOf="@+id/buttonA1"
            android:layout_alignBottom="@+id/buttonA1"/>

</RelativeLayout>

