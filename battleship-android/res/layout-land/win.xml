<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_blue">


    <ImageView
            android:id="@+id/gewonnen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gewonnen"
            android:contentDescription="@string/startscreen"
            android:layout_marginBottom="99dp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    <ImageView
            android:id="@+id/image_gewonnen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_gewonnen"
            android:contentDescription="@string/startscreen"
            android:layout_above="@+id/gewonnen" android:layout_centerHorizontal="true"/>
</RelativeLayout>